model Partner {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  description  String?
  detailContent String   @db.Text @map("detail_content")
  bannerImage  String?   @map("banner_image")
  websiteUrl   String?   @map("website_url")
  isActive     Boolean   @default(true) @map("is_active")
