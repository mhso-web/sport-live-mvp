# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sportslive"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"

# Public Base URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Redis (optional for initial deployment)
REDIS_URL="redis://localhost:6379"

# Socket.io (optional for initial deployment)  
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# API Configuration (for future frontend/backend separation)
USE_EXTERNAL_API="false"
API_BASE_URL="http://localhost:8000"

# File Upload
UPLOAD_MAX_SIZE="5242880" # 5MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_AUTH_MAX_REQUESTS="5"

# Cache TTL (in seconds)
CACHE_TTL_USER_SESSION="3600"
CACHE_TTL_POST_LIST="300"
CACHE_TTL_POST_DETAIL="600"
CACHE_TTL_STATS="3600"

# Feature Flags
ENABLE_SOCKET_IO="false"
ENABLE_REDIS_CACHE="false"
ENABLE_RATE_LIMITING="true"

# Development
NODE_ENV="development"